    <HBox>
        <Button onAction="#onButtonClick" text="4"/>
        <Button onAction="#onButtonClick" text="5"/>
        <Button onAction="#onButtonClick" text="6"/>
    </HBox>
    <HBox>
        <Button onAction="#onButtonClick" text="7"/>
        <Button onAction="#onButtonClick" text="8"/>
        <Button onAction="#onButtonClick" text="9"/>
    </HBox>
